<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col-desktop
    mdl-cell--1-offset-tablet mdl-cell--6-col-tablet
    mdl-cell--6-col-phone ">
    <h2 class="pull-right">Edit <%= resource_name.to_s.humanize %></h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col-desktop
      mdl-cell--1-offset-tablet mdl-cell--6-col-tablet
      mdl-cell--6-col-phone
      mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :email, class: "mdl-textfield__label", for: "registration-edit-email" %><br />
      <%= f.email_field :email, autofocus: true, id: "registration-edit-email", class: "mdl-textfield__input" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col-desktop
      mdl-cell--1-offset-tablet mdl-cell--6-col-tablet
      mdl-cell--6-col-phone
      mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password, class: "mdl-textfield__label", for: "registration-edit-password" %><br /> <i>(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", id: "registration-edit-password", class: "mdl-textfield__input" %>

    </div>
  </div>

  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col-desktop
      mdl-cell--1-offset-tablet mdl-cell--6-col-tablet
      mdl-cell--6-col-phone
      mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password_confirmation, class: "mdl-textfield__label", for: "registration-edit-password-confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", id: "registration-edit-password-confirmation", class: "mdl-textfield__input" %>
    </div>
  </div>

  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col-desktop
      mdl-cell--1-offset-tablet mdl-cell--6-col-tablet
      mdl-cell--6-col-phone
      mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :current_password, class: "mdl-textfield__label", for: "registration-edit-password-current" %><br />
      <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", id: "registration-edit-password-current", class: "mdl-textfield__input" %>
    </div>
  </div>

  <div class="mdl-grid">
    <%= f.submit "Update",
      class:"mdl-button mdl-js-button mdl-button--raised
      mdl-button-colored mdl-js-ripple-effect mdl-cell
      mdl-cell--4-col-desktop mdl-cell--4-offset-desktop
      mdl-cell--2-offset-tablet mdl-cell--4-col-tablet
      mdl-cell--4-col-phone" %>
  </div>
<% end %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--2-offset-desktop mdl-cell--8-col-desktop
    mdl-cell--1-offset-tablet mdl-cell--6-col-tablet
    mdl-cell--6-col-phone ">
    <h3 class="mdl-cell
      mdl-cell--8-col-desktop mdl-cell--2-offset-desktop
      mdl-cell--1-offset-tablet mdl-cell--6-col-tablet
      mdl-cell--6-col-phone pull-right">Cancel my account</h3>

    <p class="mdl-cell
      mdl-cell--4-col-desktop mdl-cell--4-offset-desktop
      mdl-cell--2-offset-tablet mdl-cell--4-col-tablet
      mdl-cell--4-col-phone">
      Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"mdl-button mdl-js-button mdl-button--raised
      mdl-button-colored mdl-js-ripple-effect mdl-cell
      mdl-cell--4-col-desktop mdl-cell--4-offset-desktop
      mdl-cell--2-offset-tablet mdl-cell--4-col-tablet
      mdl-cell--4-col-phone" %>
    </p>
  </div>
</div>
<div class="mdl-grid">
  <%= link_to "Back", :back, class:"mdl-button mdl-js-button mdl-button--raised
  mdl-button-colored mdl-js-ripple-effect mdl-cell
  mdl-cell--4-col-desktop mdl-cell--4-offset-desktop
  mdl-cell--2-offset-tablet mdl-cell--4-col-tablet
  mdl-cell--4-col-phone" %>
</div>
