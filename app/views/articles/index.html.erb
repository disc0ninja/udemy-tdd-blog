<div class="mdl-grid">
  <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect
    mdl-cell mdl-cell--4-col-desktop mdl-cell--4-offset-desktop
    mdl-cell--6-col-tablet mdl-cell--1-offset-tablet
    mdl-cell--4-col-phone">
    <%= link_to "New Article", new_article_path %>
  </button>
</div>
<% if @articles.empty? %>
  <div class="mdl-grid">
    <div class="mdl-card mdl-cell mdl-shadow--3dp
      mdl-cell--8-col-desktop mdl-cell--2-offset-desktop
      mdl-cell--6-col-tablet mdl-cell--1-offset-tablet
      mdl-cell--4-col-phone">
      <div class"mdl-card__title">
        <h3 id="no-articles" class="article-title">No Articles Created Yet.</h3>
      </div>
      <div class="mdl-card__supporting-text center-block">
        <h5>Click <%= link_to "New Article", new_article_path %> to create one</h5>
      </div>
    </div>
  </div>
<% else %>
  <div class="mdl-grid">
    <% @articles.each do |art| %>
      <div class="mdl-cell mdl-cell--4-desktop mdl-card mdl-shadow--3dp">
        <div class"mdl-card__title">
          <h4 class="article-title"><%= link_to art.title, article_path(art) %></h4>
        </div>
        <div class="mdl-card__supporting-text center-block">
          <%= truncate(art.body, length: 500) %><br />
          <small>Last Updated: <%= art.updated_at %></small>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
