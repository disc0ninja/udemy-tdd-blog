<h3>Adding New Article</h3>
<%= form_for(@article, :html => {role: "form"}) do |f| %>
  <% if @article.errors.any? %>
    <%= render "articles/article_errors" %>
  <% end %>
  <div class="mdl-grid">

    <div class="mdl-cell mdl-cell--2-offset mdl-cell--8-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :title, id: "article-title", class: "mdl-textfield__input", autofocus: true %>
        <%= f.label :title, class: "mdl-textfield__label", for: "article-title" %>
    </div>
  </div>
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-offset mdl-cell--8-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_area :body, id: "article-body", class: "mdl-textfield__input", rows: 10 %>
        <%= f.label :body, class: "mdl-textfield__label", for: "article-body" %>
    </div>
  </div>
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col mdl-cell--4-offset">
      <%= f.submit class: "mdl-button mdl-js-button mdl-button--raised mdl-button-colored mdl-js-ripple-effect" %>
    </div>
  </div>
<% end %>
